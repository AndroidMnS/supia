<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/pick_productdetilfragment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/blank_circle"/>


        <ImageView
            android:id="@+id/productImage_productdetilfragment"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="58dp"
            android:src="@drawable/blank_square"

            />



        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="68dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/brandName_productdetilfragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="브랜드명"
            />

        <TextView
            android:id="@+id/productName_productdetilfragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품명"
            android:layout_marginTop="13dp"
            android:textSize="24dp"
            />

        <TextView
            android:id="@+id/productPrice_productdetilfragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격"
            android:layout_marginTop="12dp"
            android:textSize="19dp"
            />







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배송비"
                android:textSize="17dp"
                />

            <TextView
                android:id="@+id/delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,500 원"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                />

        </LinearLayout>



    </LinearLayout>




</LinearLayout>