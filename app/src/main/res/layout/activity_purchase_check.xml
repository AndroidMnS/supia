<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Payment.PurchaseCheckActivity"
    android:orientation="vertical"
   >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일반 결제"
            android:textSize="22dp"
            android:textColor="#bad23a"
            android:textStyle="bold"
            android:paddingTop="25dp"
            android:paddingBottom="40dp"
            android:paddingLeft="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="#EBEBEB"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
       >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="배송지"
                android:textSize="18dp"
                android:textStyle="bold"
                android:paddingLeft="8dp"/>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_deliveryName"
                android:textSize="16dp"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingLeft="11dp"
            android:id="@+id/tv_deliveryaddress"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingLeft="11dp"
            android:id="@+id/tv_deliveryaddressDetail"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:paddingLeft="12dp"
                android:id="@+id/tv_deliverytel"
                android:hint="tel"
                android:paddingTop="8dp"
                android:gravity="bottom"/>

            <Button
                android:id="@+id/btn_deliveryinfomodify"
                android:layout_marginLeft="300dp"
                android:text="수정"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:background="@drawable/button_round"
                android:backgroundTint="#bad23a"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="#EBEBEB"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:text="주문상품"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="주문상품명"
            android:paddingLeft="10dp"
            android:id="@+id/tv_productname"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="#EBEBEB"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="최종 결제 금액"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="200dp"
            android:id="@+id/tv_totalprice"
            android:gravity="right|center"
            android:text="10000"
            android:textSize="22dp"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text=" 원"
            android:textSize="17dp"
            android:gravity="bottom"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="#EBEBEB"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="결제수단"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="신용/체크카드"
                android:layout_marginLeft="160dp"
                android:textSize="16dp"
                android:gravity="right|center"
                android:id="@+id/tv_paymentmethod"/>
            <Button
                android:id="@+id/btn_paymentmodify"
                android:layout_marginLeft="15dp"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:background="@drawable/button_round"
                android:text="선택"
                android:backgroundTint="#bad23a"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <Button

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:id="@+id/btn_payment"
            android:text="결제하기"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/button_long"
            android:backgroundTint="#bad23a"

            />

        </LinearLayout>





    </LinearLayout>

