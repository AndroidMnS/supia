<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Payment.PaymentBankActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="25dp"
        android:paddingBottom="30dp"
        android:text="주문 / 결제"
        android:textColor="#bad23a"
        android:textSize="22dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#EBEBEB"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:paddingLeft="11dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="계좌 번호 입력"
            android:textSize="18dp"
            />


        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="은행"
            android:background="#bad23a"
            android:gravity="center"
            android:id="@+id/tv_itemselected_paymentBank"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/bankNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="-0.25dp"
            android:drawableRight="@drawable/ic_bank"
            android:hint="Card number"
            android:inputType="phone"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:textColorHint="#bad23a"
            android:textSize="14sp"
            tools:ignore="LabelFor,NegativeMargin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            tools:ignore="NegativeMargin"
            >

            <EditText
                android:id="@+id/bankNameEditText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginRight="-0.25dp"
                android:layout_weight="1"

                android:hint="예금주명"
                android:inputType="date"
                android:padding="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="#bad23a"
                android:drawableRight="@drawable/ic_person"
                android:textSize="14sp"
                tools:ignore="LabelFor,RtlHardcoded" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginTop="270dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="확인"
        android:backgroundTint="#bad23a"
        android:background="@drawable/button_long"
        android:id="@+id/btn_paymentNext_Bankpayment"/>




</LinearLayout>
