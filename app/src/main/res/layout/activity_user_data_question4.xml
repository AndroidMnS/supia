<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Login.UserDataQuestion4">

    <TextView
        android:id="@+id/textId"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="150dp"
        android:text="사용하는 여성용품의 \n종류를 선택해주세요."
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">

        <Button
            android:id="@+id/btn_sanitarypad_question4"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="생리대"
            android:background="@color/white"
            android:textColor="@color/black"
            android:tag="0"/>

        <Button
            android:id="@+id/btn_tampon_question4"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="탐폰"
            android:background="@color/white"
            android:textColor="@color/black"
            android:tag="0"/>
        <Button
            android:id="@+id/btn_menstrualcup_question4"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="생리컵"
            android:background="@color/white"
            android:textColor="@color/black"
            android:tag="0"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_next_question4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="다음"
        android:backgroundTint="#BAD23A"/>


    <TextView
        android:id="@+id/tv_skip_question4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="SKIP"
        android:paddingRight="20dp"
        android:gravity="right"
        android:textSize="25dp"
        android:textColor="#BAD23A"/>
</LinearLayout>