<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Login.UserDataQuestion3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="200dp"
        android:text="당신의 생일을 입력해주세요."
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <DatePicker
            android:id="@+id/dp_question3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:outlineAmbientShadowColor="#BAD23A"
            android:outlineSpotShadowColor="#BAD23A"

            />


    </LinearLayout>

    <Button
        android:id="@+id/btn_next_question3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:backgroundTint="#BAD23A"
        android:text="다음" />


    <TextView
        android:id="@+id/tv_skip_question3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:paddingRight="20dp"
        android:text="SKIP"
        android:textColor="#BAD23A"
        android:textSize="25dp" />
</LinearLayout>