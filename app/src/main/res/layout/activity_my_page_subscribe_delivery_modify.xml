<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="18"
    tools:context=".Activities.MyPage.MyPageSubscribeDeliveryModifyActivity"
    android:layout_margin="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="25dp"
        android:paddingBottom="30dp"
        android:text="구독 배송지 변경"
        android:textColor="#bad23a"
        android:textSize="22dp"
        android:textStyle="bold"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#EBEBEB"
        android:orientation="vertical" />





    <LinearLayout
        android:id="@+id/input_layout_address_mypage"
        android:layout_marginTop="110dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/et_address_mypage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="7dp"
            android:hint="주소를 입력하세요"
            android:textSize="17dp"
            android:gravity="center|left"
            android:layout_weight="20"
            android:inputType="text"
            android:minLines="2"
            android:enabled="true"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/et_address_detail_mypage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16dp"
            android:inputType="text"
            android:background="@color/white"
            android:minLines="2"/>

    </LinearLayout>







    <Button
        android:id="@+id/btn_changeDeliveryAddr_mypage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주소 변경하기 "
        android:layout_marginTop="70dp"
        android:background="@drawable/button_long"
        android:backgroundTint="#bad23a"/>
    <Button
        android:id="@+id/btn_cancel_mypage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="뒤로가기 "
        android:layout_marginTop="15dp"
        android:background="@drawable/button_long"
        android:backgroundTint="#bad23a"/>



</LinearLayout>