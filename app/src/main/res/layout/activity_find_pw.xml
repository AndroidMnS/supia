<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="25dp"
        android:paddingBottom="30dp"
        android:text="암호 찾기 "
        android:textColor="#bad23a"
        android:textSize="22dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#EBEBEB"
        android:orientation="vertical" />

    <EditText
        android:id="@+id/authEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:hint="인증 받을 이메일 계정을 입력하세요." />

    <Button
        android:id="@+id/authBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#BAD23A"
        android:gravity="center"
        android:text="이메일 인증하기"
        android:background="@drawable/button_long"/>


    <EditText
        android:id="@+id/authCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="55dp"
        android:hint="인증번호를 입력해주세요"/>

    <Button
        android:id="@+id/authCheckBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#BAD23A"
        android:gravity="center"
        android:background="@drawable/button_long"
        android:text="제출" />

    <Button
        android:id="@+id/btn_back_findpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#BAD23A"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_long"
        android:text="뒤로가기" />


</LinearLayout>