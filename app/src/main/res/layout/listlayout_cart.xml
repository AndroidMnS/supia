<!--                        android:background="@color/white"-->
<!--                        android:textColor="#BAD23A"-->
<!--                        android:id="@+id/delete_tv_listlayout_cart"/>-->


<!--                </LinearLayout>-->


            </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>