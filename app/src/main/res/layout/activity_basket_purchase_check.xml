<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Payment.BasketPurchaseCheckActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="25dp"
        android:paddingBottom="40dp"
        android:text="장바구니 결제"
        android:textColor="#bad23a"
        android:textSize="22dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#EBEBEB"
        android:orientation="vertical" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:text="배송지"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_deliveryName_basket"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:textSize="16dp"
                android:hint="수정 버튼을 눌러 배송지 추가를 해주세요"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_deliveryaddress_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="11dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_deliveryaddressDetail_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="11dp"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_deliverytel_basket"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:hint=""
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_deliveryinfomodify_basket"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="185dp"
                android:background="@drawable/button_round"
                android:backgroundTint="#bad23a"
                android:text="수정" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#EBEBEB"
        android:orientation="vertical" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:text="주문상품"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_productName_basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:ellipsize="end"
                android:hint="주문상품명"
                android:maxLines="1"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:text="주문수량"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_productQuantity_basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:ellipsize="end"
                android:hint="주문수량"
                android:maxLines="1"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#EBEBEB"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="최종 결제 금액"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_totalprice_basket"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:gravity="right|center"
            android:text="10000"
            android:textSize="22dp" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="left|center"

            android:text=" 원 (배송비포함)"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#EBEBEB"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="결제수단"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_paymentmethod_basket"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="160dp"
            android:gravity="right|center"
            android:text="신용/체크카드"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_paymentmodify_basket"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/button_round"
            android:backgroundTint="#bad23a"
            android:text="선택" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button

            android:id="@+id/btn_payment_basket"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_long"
            android:backgroundTint="#bad23a"
            android:text="결제하기"
            android:textSize="20dp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/btn_back_basket"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_long"
            android:backgroundTint="#bad23a"
            android:text="뒤로가기"
            android:textSize="20dp"
            android:textStyle="bold"

            />

    </LinearLayout>


</LinearLayout>

