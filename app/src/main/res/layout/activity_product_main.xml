<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Product.ProductMainActivity"
    android:orientation="vertical"
    >

    <include
        layout="@layout/product_header"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- 배너 추가 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            >

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/autoViewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        >

        <Button
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생리대"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:background="@drawable/button_round"
            android:id="@+id/btn_category1_product"
            />
        <Button
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생리컵"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:background="@drawable/button_round"
            android:id="@+id/btn_category2_product"
            />

        <Button
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탐폰"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:background="@drawable/button_round"
            android:id="@+id/btn_category3_product"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="28dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근 구매하신 상품을 \n 다시 만나보세요."
                android:textStyle="bold"
                android:textSize="18sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            >

            <TextView
                android:textColor="#A2A2A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더보기 〉 "
                android:textStyle="bold"
                android:textSize="11sp"

                />



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl_product_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </LinearLayout>


<include layout="@layout/bottom_bar"/> <!--애정츄 추가-->

</LinearLayout>