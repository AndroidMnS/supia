<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_margin="10dp"
    android:orientation="vertical">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_deliveryName_regular"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="받는사람" />

        <TextView
            android:id="@+id/tv_deliveryaddress_regular"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:hint="주소" />

        <TextView
            android:id="@+id/tv_deliveryaddressDetail_regular"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:hint="상세주소" />
        <TextView
            android:id="@+id/tv_deliverytel_regular"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:hint="전화번호" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:layout_marginRight="15dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="수정하기"
            android:backgroundTint="#bad23a"
            android:id="@+id/btn_moveModify_regular"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:text="사용하기"
            android:backgroundTint="#bad23a"
            android:id="@+id/btn_movePayment_regular"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:text="삭제하기"
            android:backgroundTint="#bad23a"
            android:id="@+id/btn_deleteAdress_regular"/>


    </LinearLayout>


</LinearLayout>