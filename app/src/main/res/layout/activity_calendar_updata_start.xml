<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Calendar.mensUpdate">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_cancle_datepicker_calendar1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:background="@drawable/calendar_cancle" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="가장 최근의 \n월경 시작일을 수정해주세요."
                android:textSize="20dp"
                android:textStyle="bold" />
        </FrameLayout>

        <DatePicker
            android:id="@+id/maincalendar_mens_start_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:outlineAmbientShadowColor="#BAD23A"
            android:outlineSpotShadowColor="#BAD23A" />

        <Button
            android:id="@+id/btn_next_mensupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#BAD23A"
            android:text="다음" />


    </LinearLayout>
</LinearLayout>