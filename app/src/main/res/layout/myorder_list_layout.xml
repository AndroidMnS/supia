<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="배송완료"
            android:textColor="#BAD23A"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_productimg_myorderlist"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_productname_myorderlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="7dp"
                    android:hint="productName"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_productprice_myorderlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="7dp"
                    android:gravity="center"
                    android:hint="productPrice" />

                <TextView
                    android:id="@+id/tv_productquantity_myorderlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="7dp"
                    android:gravity="center"
                    android:hint="productQuantity" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_writereivew_myorderlist"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/my_review_btn"
                android:gravity="center"
                android:padding="5dp"
                android:text="리뷰 작성"
                android:textColor="@color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>